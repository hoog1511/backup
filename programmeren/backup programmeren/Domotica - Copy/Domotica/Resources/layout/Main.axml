<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="@drawable/yLOOp">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="558.7dp"
        android:id="@+id/relativeLayout1">
        <TextView
            android:text="@string/timer_state_text"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/textViewTimerState"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp" />
        <TextView
            android:text="@string/timer_state_value"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/textViewTimerStateValue"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20dp" />
        <TextView
            android:text="@string/arduino_server_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/textViewServer"
            android:layout_below="@id/textViewTimerState"
            android:layout_alignParentLeft="true"
            android:textSize="20dp" />
        <TextView
            android:text="@string/arduino_server_connect"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/textViewServerConnect"
            android:layout_below="@id/textViewTimerStateValue"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dp" />
        <TextView
            android:text="@string/ip_address_text"
            android:layout_width="150dp"
            android:layout_height="27.5dp"
            android:id="@+id/textViewIPAddress"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/textViewServer"
            android:textSize="20dp" />
        <TextView
            android:text="@string/ip_port_text"
            android:layout_width="200dp"
            android:layout_height="26.0dp"
            android:id="@+id/textViewIPPort"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textViewServerConnect"
            android:textSize="20dp" />
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextIPAddress"
            android:text="@string/ip_address_value"
            android:lines="1"
            android:minLines="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:layout_below="@id/textViewIPAddress"
            android:layout_alignParentLeft="true"
            android:textSize="20dp" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextIPPort"
            android:text="@string/ip_port_value"
            android:lines="1"
            android:minLines="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:layout_below="@id/textViewIPPort"
            android:layout_alignParentRight="true"
            android:textSize="20dp" />
        <Button
            android:text="@string/button_connect_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextIPAddress"
            android:id="@+id/buttonConnect"
            android:layout_alignParentLeft="true"
            android:backgroundTint="#ff205fa6"
            android:textSize="20dp" />
        <Switch
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/ChangePinState1"
            android:text="@string/switch_pintstate1_text"
            android:textSize="20dp"
            android:layout_below="@+id/buttonConnect" />
        <EditText
            android:inputType="time"
            android:id="@+id/lightson"
            android:textSize="20dp"
            android:digits="0123456789"
            android:maxLength="4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lightson_text" />
        <EditText
            android:inputType="time"
            android:id="@+id/lightsoff"
            android:textSize="20dp"
            android:digits="0123456789"
            android:maxLength="4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lightsoff_text" />
        <TextView
            android:text="@string/lightsoff_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lightson"
            android:id="@+id/lightsoff_text"
            android:textSize="20dp" />
        <Button
            android:text="@string/lights_on_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/send_time_on"
            android:layout_below="@+id/lightson_text"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:backgroundTint="#ff205fa6"
            android:layout_marginRight="50dp" />
        <Button
            android:text="@string/lights_off_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/send_time_off"
            android:layout_below="@+id/lightsoff_text"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:backgroundTint="#ff205fa6"
            android:layout_marginRight="50dp" />
        <Switch
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/ChangePinState2"
            android:text="@string/switch_pintstate2_text"
            android:textSize="20dp"
            android:layout_below="@id/ChangePinState1" />
        <TextView
            android:text="@string/lightson_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lightson_text"
            android:textSize="20dp"
            android:layout_below="@id/ChangePinState2" />
        <TextView
            android:text="@string/time_on_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/time_on_text"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ChangePinState2"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/lightson_text"
            android:layout_marginLeft="100dp" />
        <TextView
            android:text="@string/time_off_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lightson"
            android:id="@+id/time_off_text"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/lightsoff_text"
            android:layout_marginLeft="100dp" />
        <Switch
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/send_time_off"
            android:id="@+id/switch_sensor_mode"
            android:text="@string/switch_sensor_mode_text"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>