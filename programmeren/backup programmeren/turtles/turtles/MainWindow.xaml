<Window x:Name="Window" x:Class="turtles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:turtles"
        mc:Ignorable="d"
        Title="Window" Height="350" Width="525">
    <Grid>
        <Canvas x:Name="playground"  HorizontalAlignment="Stretch" Height="auto" Margin="0,0,0.4,-0.2" VerticalAlignment="Stretch" Width="auto">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF30FF2B" Offset="0.003"/>
                    <GradientStop Color="#FF010601"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Button x:Name="button" Content="Button" Canvas.Left="10" Canvas.Top="10"/>
        </Canvas>

    </Grid>
</Window>
